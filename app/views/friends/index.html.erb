<h1>Friend List</h1>
<br>
<% if user_signed_in? %>
<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user%>
      <tr>
        <td><%= friend.id %></td>
        <td>
        <%= link_to friend.frist_name + " " + friend.last_name, friend, class:"text-decoration-none" %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.address %></td>
        <% if friend.user == current_user %>
          <td class="d-flex flex-row gap-2">
          <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-sm btn-secondary" %>
          <%= link_to "Delete", friend, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-sm btn-outline-danger" %>
          </td> 
        <% else %>
          <td></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add New", new_friend_path, class:"btn btn-secondary"%>

<% else %>
  <h2>Login to explore more<h2>

<% end %>